<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render("waste_carriers_engine/shared/back", back_path: "/bo") %>

    <h1 class="govuk-heading-l">
      <%= t(".heading") %>
    </h1>
    <div class="govuk-inset-text">
      <p class="govuk-body">
        <%= t(".sub_heading") %>
      </p>
    </div>
    <p class="govuk-body">
      <%= t(".first_paragraph", link_to_privacy_policy: link_to_privacy_policy).html_safe %>
    </p>
    <p class="govuk-body">
      <%= t(".second_paragraph") %>
    </p>
    <p class="govuk-body">
      <%= t(".third_paragraph") %>
    </p>
    <p class="govuk-body">
      <%= t(".fourth_paragraph") %>
    </p>

    <details class="govuk-details">
      <summary class="govuk-details__summary">
        <span class="govuk-details__summary-text"><%= t(".privacy_policy_text.summary") %></span>
      </summary>
      <div class="govuk-details__text">
        <% 1.upto(14).each do |paragraph_index| %>
          <p class="govuk-body">
            <%= t(".privacy_policy_text.paragraph_#{paragraph_index}") %>
          </p>
        <% end %>
      </div>
    </details>

    <details class="govuk-details">
      <summary class="govuk-details__summary">
        <span class="govuk-details__summary-text"><%= t(".contact_details_dpo.summary") %></span>
      </summary>
      <div class="govuk-details__text">
        <p class="govuk-body"><%= t(".contact_details_dpo.address_html") %></p>
        <p class="govuk-body"><%= t(".contact_details_dpo.email") %></p>
      </div>
    </details>

    <details class="govuk-details">
      <summary class="govuk-details__summary">
        <span class="govuk-details__summary-text"><%= t(".contact_details_ico.summary") %></span>
      </summary>
      <div class="govuk-details__text">
        <p class="govuk-body"><%= t(".contact_details_ico.website") %></p>
      </div>
    </details>

    <p><%= link_to "Continue", @presenter.destination_path, class: "govuk-button" %></p>
    <p class="govuk-body"><%= t(".last_updated") %></p>
  </div>
</div>
