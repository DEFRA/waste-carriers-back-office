<h1 class="heading-large">Renewal in progress: <%= @transient_registration.reg_identifier %></h1>

<div class="grid-row">
  <div class="column-two-thirds">
    <table>
      <caption class="heading-small">Registration information</caption>
      <tbody>
        <tr>
          <td>
            User
          </td>
          <td>
            <%= show_value_or_filler(:account_email) %>
          </td>
        </tr>
        <tr>
          <td>
            Registration number
          </td>
          <td>
            <%= show_value_or_filler(:reg_identifier) %>
          </td>
        </tr>
        <tr>
          <td>
            Tier
          </td>
          <td>
            <%= show_value_or_filler(:tier) %>
          </td>
        </tr>
        <tr>
          <td>
            Registration type
          </td>
          <td>
            <%= show_value_or_filler(:registration_type) %>
          </td>
        </tr>
      </tbody>
    </table>

    <table>
      <caption class="heading-small">Business information</caption>
      <tbody>
        <tr>
          <td>
            Company name
          </td>
          <td>
            <%= show_value_or_filler(:company_name) %>
          </td>
        </tr>
        <tr>
          <td>
            Business type
          </td>
          <td>
            <%= show_value_or_filler(:business_type) %>
          </td>
        </tr>
        <tr>
          <td>
            Companies House number
          </td>
          <td>
            <%= show_value_or_filler(:company_no) %>
          </td>
        </tr>
        <tr>
          <td>
            Location
          </td>
          <td>
            <%= show_value_or_filler(:location) %>
          </td>
        </tr>
        <tr>
          <td>
            Registered address
          </td>
          <td>
            TODO
          </td>
        </tr>
        <tr>
          <td>
            Main people
          </td>
          <td>
            TODO
          </td>
        </tr>
      </tbody>
    </table>

    <table>
      <caption class="heading-small">Contact details</caption>
      <tbody>
        <tr>
          <td>
            Contact name
          </td>
          <td>
            <%= show_value_or_filler(:first_name) %> <%= show_value_or_filler(:last_name) %>
          </td>
        </tr>
        <tr>
          <td>
            Contact phone
          </td>
          <td>
            <%= show_value_or_filler(:phone_number) %>
          </td>
        </tr>
        <tr>
          <td>
            Contact email
          </td>
          <td>
            <%= show_value_or_filler(:contact_email) %>
          </td>
        </tr>
        <tr>
          <td>
            Contact address
          </td>
          <td>
            TODO
          </td>
        </tr>
      </tbody>
    </table>

    <table>
      <caption class="heading-small">Conviction information</caption>
      <tbody>
        <tr>
          <td>
            Declared convictions?
          </td>
          <td>
            <%= show_value_or_filler(:declared_convictions) %>
          </td>
        </tr>
        <tr>
          <td>
            Declared people
          </td>
          <td>
            TODO
          </td>
        </tr>
        <tr>
          <td>
            Conviction check required?
          </td>
          <td>
            <%= @transient_registration.conviction_check_required? %>
          </td>
        </tr>
      </tbody>
    </table>

    <table>
      <caption class="heading-small">Payment information</caption>
      <tbody>
        <tr>
          <td>
            Method of payment
          </td>
