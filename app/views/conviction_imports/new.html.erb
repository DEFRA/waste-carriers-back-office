<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render("waste_carriers_engine/shared/back", back_path: bo_path) %>

    <h1 class="govuk-heading-l">
      <%= t(".heading") %>
    </h1>

    <p class="govuk-body"><%= t(".paragraph1") %></p>

    <%= render("shared/flash_messages") %>

    <%= form_tag(conviction_imports_path, multipart: true) do %>
      <div class="govuk-form-group">
        <label class="govuk-label govuk-label--s" for="file">
          <%= t(".file_label") %>
        </label>
        <p class="govuk-hint"><%= t(".file_hint") %></p>
        <%= file_field_tag :file, accept: 'text/csv', class: "govuk-file-upload" %>
      </div>

      <div class="govuk-warning-text">
        <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
        <strong class="govuk-warning-text__text">
          <span class="govuk-warning-text__assistive">Warning</span>
          <%= t(".warning") %>
        </strong>
      </div>

      <div class="govuk-form-group">
        <%= submit_tag t(".button"), class: "govuk-button" %>
      </div>
    <% end %>
  </div>
</div>
