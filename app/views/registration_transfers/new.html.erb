<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <%= render("waste_carriers_engine/shared/back", back_path: registration_path(@registration.reg_identifier)) %>
  </div>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render("waste_carriers_engine/shared/errors", object: @registration_transfer_form) %>

    <h1 class="govuk-heading-l">
      <%= t(".heading", reg_identifier: @registration.reg_identifier) %>
    </h1>

    <div class="govuk-form-group">
      <% @registration.new_registration_transfer_message_lines.each do |message_line| %>
        <p class="govuk-body"><%= message_line %></p>
      <% end %>
      <table class="govuk-table">
        <caption class="govuk-table__caption govuk-table__caption--m">
          <%= t(".registration_info.heading") %>
        </caption>
        <tbody class="govuk-table__body">
          <tr class="govuk-table__row">
            <th class="govuk-table__header" scope="row">
              <%= t(".registration_info.labels.account_email") %>
            </th>
            <td class="govuk-table__cell">
              <%= @registration.account_email_message %>
            </td>
          </tr>
          <tr class="govuk-table__row">
            <th class="govuk-table__header" scope="row">
              <%= t(".registration_info.labels.reg_identifier") %>
            </th>
            <td class="govuk-table__cell">
              <%= @registration.reg_identifier %>
            </td>
          </tr>
          <tr class="govuk-table__row">
            <th class="govuk-table__header" scope="row">
              <%= t(".registration_info.labels.company_name") %>
            </th>
            <td class="govuk-table__cell">
              <%= @registration.company_name %>
            </td>
          </tr>
      </table>
    </div>

    <h2 class="govuk-heading-m">
      <%= t(".subheading_1") %>
    </h2>

    <%= form_for(@registration_transfer_form, url: registration_registration_transfers_path) do |f| %>
      <div class="govuk-form-group <%= "govuk-form-group--error" if @registration_transfer_form.errors[:email].any? %>" id="email">
        <% if @registration_transfer_form.errors[:email].any? %>
          <span class="govuk-error-message"><%= @registration_transfer_form.errors[:email].join(", ") %></span>
        <% end %>

        <%= f.label :email, t(".email_label"), class: "govuk-label" %>
        <%= f.text_field :email, class: "govuk-input govuk-input--width-10" %>
      </div>

      <div class="govuk-form-group <%= "govuk-form-group--error" if @registration_transfer_form.errors[:confirm_email].any? %>" id="confirm_email">
        <% if @registration_transfer_form.errors[:confirm_email].any? %>
          <span class="govuk-error-message"><%= @registration_transfer_form.errors[:confirm_email].join(", ") %></span>
        <% end %>

        <%= f.label :confirm_email, t(".confirm_email_label"), class: "govuk-label" %>
        <%= f.text_field :confirm_email, class: "govuk-input govuk-input--width-10" %>
      </div>

      <div class="govuk-form-group">
        <%= f.submit t(".button"), class: "govuk-button" %>
      </div>
    <% end %>
  </div>
</div>
