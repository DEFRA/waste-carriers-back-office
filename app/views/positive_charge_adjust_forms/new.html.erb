<div class="grid-row">
  <div class="column-full">
    <%= render("waste_carriers_engine/shared/back", back_path: new_resource_charge_adjust_form_path(@resource._id)) %>
  </div>
</div>

<div class="grid-row">
  <div class="column-two-thirds">
    <%= render("waste_carriers_engine/shared/errors", object: @positive_charge_adjust_form) %>

    <h1 class="heading-large">
      <%= t(".heading", reg_identifier: @resource.reg_identifier) %>
    </h1>

    <div class="form-group">
      <%= render "shared/company_details_panel", registration: @resource %>
    </div>

    <%= form_for(@positive_charge_adjust_form, url: resource_positive_charge_adjust_form_path(@resource._id), html: { novalidate: true }) do |f| %>
      <div class="form-group <%= "form-group-error" if @positive_charge_adjust_form.errors[:amount].any? %>" id="amount">
        <% if @positive_charge_adjust_form.errors[:amount].any? %>
          <span class="error-message"><%= @positive_charge_adjust_form.errors[:amount].join(", ") %></span>
        <% end %>

        <%= f.label :amount, class: "form-label" do %>
          <%= t(".fields.amount.label") %>
          <span class="form-hint"><%= t(".fields.amount.hint") %></span>
        <% end %>
        <%= f.number_field :amount, class: "form-control", step: "0.01" %>
      </div>

      <div class="form-group <%= "form-group-error" if @positive_charge_adjust_form.errors[:reference].any? %>" id="reference">
        <% if @positive_charge_adjust_form.errors[:reference].any? %>
          <span class="error-message"><%= @positive_charge_adjust_form.errors[:reference].join(", ") %></span>
        <% end %>

        <%= f.label :reference, t(".fields.reference.label"), class: "form-label" %>
        <%= f.text_field :reference, class: "form-control" %>
      </div>

      <div class="form-group <%= "form-group-error" if @positive_charge_adjust_form.errors[:description].any? %>" id="description">
        <% if @positive_charge_adjust_form.errors[:description].any? %>
          <span class="error-message"><%= @positive_charge_adjust_form.errors[:description].join(", ") %></span>
        <% end %>

        <%= f.label :description, class: "form-label" do %>
          <%= t(".fields.description.label") %>

          <span class="form-hint">
            <%= t(".fields.description.hint") %>
          </span>
        <% end %>

        <%= f.text_area :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit t(".confirm"), class: "button" %>
      </div>
    <% end %>
  </div>
</div>
